@model DevFolio.Models.TblAdress

@{
    ViewBag.Title = "UpdateAdress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Adres Güncelleme Sayfası</h2>
<form method="post">
    <input type="hidden" name="AdressID" value="@Model.AdressId" />
    <label>Açıklama</label>
    <input type="text" class="form-control" name="Description" value="@Model.Description" />
    <br />
    <label>Konum</label>
    <input type="text" class="form-control" name="Location" value="@Model.Location" />
    <br />
    <label>Email</label>
    <input type="text" class="form-control" name="Email" value="@Model.Email" />
    <br />
    <label>Telefon</label>
    <input type="text" class="form-control" name="PhoneNumber" value="@Model.PhoneNumber" />
    <br />
    <button class="btn btn-info"> Adres Bölümünü Kaydet</button>
</form>
