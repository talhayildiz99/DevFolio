
@{
    ViewBag.Title = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Sosyal Medya Girişi</h2>

<form method="post">
    <label>Sosyal Medya Id</label>
    <input type="text" class="form-control" name="SocailMediaId" />
    <br />
    <label>Platform İsmi</label>
    <input type="text" class="form-control" name="PlatformName" />
    <br />
    <label>Ikon Url</label>
    <input type="text" class="form-control" name="IconUrl" />
    <br />
    <label>Gidilecek Link</label>
    <input type="text" class="form-control" name="RedirectUrl" />
    <br />
    <label>Aktif Mi ? (T/F)</label>
    <input type="text" class="form-control" name="Satatus" />
    <br />
    <button class="btn btn-info">Sosyal Medyayı Kaydet</button>
</form>