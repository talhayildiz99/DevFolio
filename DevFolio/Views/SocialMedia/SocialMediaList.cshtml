@model List<DevFolio.Models.TblSocailMedia>

@{
    ViewBag.Title = "SocialMediaList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Sosyal Medya Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Başlık</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach(var item in Model)
     {
        <tr>
            <td>@item.SocailMediaId</td>
            <td>@item.PlatformName</td>
            <td>@item.Status</td>
            <td><a href="#" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-success">Güncelle</a></td>
        </tr>
     }

</table>
<a href="#" class="btn btn-info">Yeni Sosyal Medya Girişi</a>
