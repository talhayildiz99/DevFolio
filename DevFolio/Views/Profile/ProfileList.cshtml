@model List<DevFolio.Models.TblProfile>
@{
    ViewBag.Title = "ProfileList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Profil Listesi</h2>

@{ if (Model.Count == 0)
    {
        <td><a href="/Profile/CreateProfile" class="btn btn-info">Ekle</a></td>
    }}
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>İsim Soyisim</th>
        <th>Ünvan</th>
        <th>Email</th>
        <th>Telefon</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProfileID</td>
            <td>@item.NameSurname</td>
            <td>@item.NameSurname</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td><a href="/Profile/DeleteProfile/@item.ProfileID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Profile/UpdateProfile/@item.ProfileID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
